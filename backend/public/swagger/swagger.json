{
  "openapi": "3.0.0",
  "info": {
    "title": "WS Manager API",
    "version": "1.0.0",
    "description": "Documentação da API WS Manager organizada por domínio:\n\n- Empresa\n- Financeiro\n- Gestão\n- Agenda\n- Manutenção"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Servidor local"
    }
  ],
  "tags": [
    { "name": "Empresa", "description": "Cadastro e gestão completa das empresas" },
    { "name": "Gestão", "description": "Indicadores operacionais, metas e resultados" },
    { "name": "Financeiro", "description": "Lançamentos financeiros e empréstimos" },
    { "name": "Agenda", "description": "Calendário, datas e feriados" },
    { "name": "Manutenção", "description": "Controle de manutenções e custos" }
  ],
  "paths": {
    "/empresa": {
      "get": {
        "tags": ["Empresa"],
        "summary": "Listar empresas",
        "description": "Retorna todas as empresas cadastradas",
        "responses": {
          "200": {
            "description": "Lista de empresas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Empresa" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Empresa"],
        "summary": "Criar empresa",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/EmpresaCreate" }
            }
          }
        },
        "responses": {
          "201": { "description": "Empresa criada com sucesso" }
        }
      }
    },
    "/empresa/{id}": {
      "get": {
        "tags": ["Empresa"],
        "summary": "Detalhar empresa",
        "parameters": [ { "$ref": "#/components/parameters/IdPath" } ],
        "responses": {
          "200": {
            "description": "Empresa encontrada",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Empresa" } }
            }
          }
        }
      },
      "put": {
        "tags": ["Empresa"],
        "summary": "Atualizar empresa",
        "parameters": [ { "$ref": "#/components/parameters/IdPath" } ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/EmpresaUpdate" } }
          }
        },
        "responses": { "200": { "description": "Empresa atualizada" } }
      },
      "delete": {
        "tags": ["Empresa"],
        "summary": "Remover empresa",
        "parameters": [ { "$ref": "#/components/parameters/IdPath" } ],
        "responses": { "200": { "description": "Empresa removida" } }
      }
    },

    "/gestao": {
      "get": {
        "tags": ["Gestão"],
        "summary": "Listar registros de gestão",
        "responses": {
          "200": {
            "description": "Lista de registros",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Gestao" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Gestão"],
        "summary": "Criar registro de gestão",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/GestaoCreate" } }
          }
        },
        "responses": { "201": { "description": "Registro criado" } }
      }
    },
    "/gestao/{id}": {
      "get": {
        "tags": ["Gestão"],
        "summary": "Detalhar gestão",
        "parameters": [ { "$ref": "#/components/parameters/IdPath" } ],
        "responses": { "200": { "description": "Registro encontrado" } }
      },
      "put": {
        "tags": ["Gestão"],
        "summary": "Atualizar gestão",
        "parameters": [ { "$ref": "#/components/parameters/IdPath" } ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/GestaoUpdate" } }
          }
        },
        "responses": { "200": { "description": "Registro atualizado" } }
      },
      "delete": {
        "tags": ["Gestão"],
        "summary": "Remover gestão",
        "parameters": [ { "$ref": "#/components/parameters/IdPath" } ],
        "responses": { "200": { "description": "Registro removido" } }
      }
    },

    "/emprestimo": {
      "get": {
        "tags": ["Financeiro"],
        "summary": "Listar empréstimos",
        "responses": {
          "200": {
            "description": "Lista de empréstimos",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Emprestimo" } }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Financeiro"],
        "summary": "Criar empréstimo",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/EmprestimoCreate" } }
          }
        },
        "responses": { "201": { "description": "Empréstimo criado" } }
      }
    },
    "/emprestimo/{id}": {
      "get": {
        "tags": ["Financeiro"],
        "summary": "Detalhar empréstimo",
        "parameters": [ { "$ref": "#/components/parameters/IdPath" } ],
        "responses": { "200": { "description": "Empréstimo encontrado" } }
      },
      "put": {
        "tags": ["Financeiro"],
        "summary": "Atualizar empréstimo",
        "parameters": [ { "$ref": "#/components/parameters/IdPath" } ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/EmprestimoUpdate" } }
          }
        },
        "responses": { "200": { "description": "Empréstimo atualizado" } }
      },
      "delete": {
        "tags": ["Financeiro"],
        "summary": "Remover empréstimo",
        "parameters": [ { "$ref": "#/components/parameters/IdPath" } ],
        "responses": { "200": { "description": "Empréstimo removido" } }
      }
    },

    "/lancamento": {
      "get": {
        "tags": ["Financeiro"],
        "summary": "Listar lançamentos",
        "responses": {
          "200": {
            "description": "Lista de lançamentos",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Lancamento" } }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Financeiro"],
        "summary": "Criar lançamento",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/LancamentoCreate" } }
          }
        },
        "responses": { "201": { "description": "Lançamento criado" } }
      }
    },

    "/calendario": {
      "get": {
        "tags": ["Agenda"],
        "summary": "Listar calendário",
        "responses": {
          "200": {
            "description": "Lista de datas",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Calendario" } }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Agenda"],
        "summary": "Criar data no calendário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/CalendarioCreate" } }
          }
        },
        "responses": { "201": { "description": "Data criada" } }
      }
    },

    "/manutencao": {
      "get": {
        "tags": ["Manutenção"],
        "summary": "Listar manutenções",
        "responses": {
          "200": {
            "description": "Lista de manutenções",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Manutencao" } }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Manutenção"],
        "summary": "Criar manutenção",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/ManutencaoCreate" } }
          }
        },
        "responses": { "201": { "description": "Manutenção criada" } }
      }
    }
  },
  "components": {
    "parameters": {
      "IdPath": {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": { "type": "integer" }
      }
    },
    "schemas": {
      "Empresa": {
        "type": "object",
        "required": ["id", "nome", "cnpj"],
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "nome": { "type": "string", "example": "WS Tecnologia" },
          "slogan": { "type": "string" },
          "descricao": { "type": "string" },
          "cnpj": { "type": "string", "example": "00.000.000/0001-00" },
          "atividade": { "type": "string" },
          "localizacao": { "type": "string" },
          "missao": { "type": "string" }
        }
      },
      "EmpresaCreate": {
        "allOf": [ { "$ref": "#/components/schemas/Empresa" } ]
      },
      "EmpresaUpdate": {
        "allOf": [ { "$ref": "#/components/schemas/Empresa" } ]
      },

      "Gestao": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "data": { "type": "string", "format": "date" },
          "km_percorrido": { "type": "number" },
          "meta": { "type": "number" },
          "horas_trabalhadas": { "type": "number" },
          "receita": { "type": "number" },
          "despesa": { "type": "number" },
          "lucro": { "type": "number" }
        }
      },
      "GestaoCreate": { "allOf": [ { "$ref": "#/components/schemas/Gestao" } ] },
      "GestaoUpdate": { "allOf": [ { "$ref": "#/components/schemas/Gestao" } ] },

      "Emprestimo": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "descricao": { "type": "string" },
          "valor_total": { "type": "number" },
          "valor_pago": { "type": "number" },
          "valor_a_pagar": { "type": "number" },
          "data_parcela": { "type": "string", "format": "date" }
        }
      },
      "EmprestimoCreate": { "allOf": [ { "$ref": "#/components/schemas/Emprestimo" } ] },
      "EmprestimoUpdate": { "allOf": [ { "$ref": "#/components/schemas/Emprestimo" } ] },

      "Lancamento": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "ano": { "type": "integer" },
          "mes": { "type": "integer" },
          "descricao": { "type": "string" },
          "valor": { "type": "number" },
          "categoria": { "type": "string" }
        }
      },
      "LancamentoCreate": { "allOf": [ { "$ref": "#/components/schemas/Lancamento" } ] },

      "Calendario": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "data": { "type": "string", "format": "date" },
          "dia_semana": { "type": "string" },
          "mes": { "type": "integer" },
          "ano": { "type": "integer" },
          "feriado": { "type": "boolean" }
        }
      },
      "CalendarioCreate": { "allOf": [ { "$ref": "#/components/schemas/Calendario" } ] },

      "Manutencao": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "tipo_manutencao": { "type": "string" },
          "data_ultima": { "type": "string", "format": "date" },
          "valor_pago": { "type": "number" },
          "data_proxima": { "type": "string", "format": "date" }
        }
      },
      "ManutencaoCreate": { "allOf": [ { "$ref": "#/components/schemas/Manutencao" } ] }
    }
  }
}

